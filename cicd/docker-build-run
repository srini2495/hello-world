pipeline {
  agent any
  options {
    disableConcurrentBuilds()
    disableResume()
    buildDiscarder(logRotator(numToKeepStr: '10'))
    timeout(time: 1, unit: 'HOURS')
  }
  tools {
    maven 'maven-3.6.3' 
  }
  stages {
    stage ('Build') {
      steps {
        sh 'mvn clean package'
      }
    }
    stage ('Build docker image') {
      steps {
        sh 'docker build . -t "hello-world-1"'
        sh 'docker images'
      }
    }
    stage ('Deploy') {
      steps {
        sh 'docker stop hello-world || true && docker rm hello-world || true' 
        sh 'docker run -d -p 8082:8080 hello-world-1 --name "hello-world"'
        sh 'docker ps -a'
      }
    }
  }
}
